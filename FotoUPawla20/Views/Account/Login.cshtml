@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Zaloguj się";
    Layout = null;
}
<html>
    <head>
        <link href="https://fonts.googleapis.com/css?family=Roboto:300" rel="stylesheet">
        <link href="~/css/Account/LoginCore.css" rel="stylesheet" />
        <title>Logowanie do aplikacji</title>
        <link rel="Shortcut icon" href="~/css/Universal/CodliMini.png">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    </head>

    <body>
        <div class="row">
            <div class="col-md-4">
                <section id="FormularzLogowania">
                    <img src="~/images/Account/ikona.png" class="ikona" />
                    <div id="TytulStrony">@ViewData["Title"]</div>
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Email" placeholder="Adres e-mail" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" placeholder="Hasło" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    <div id="RememberMeLabel">Zapamiętaj mnie</div>
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" id="LoginBtn" class="btn btn-default">Zaloguj się</button>
                        </div>
                    </form>
                </section>
            </div>
        </div>

        @section Scripts {
            @await Html.PartialAsync("_ValidationScriptsPartial")
        }
    </body>
</html>
